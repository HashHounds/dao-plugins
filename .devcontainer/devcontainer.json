{
  "name": "Aragon Dev Container",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers-contrib/features/curl-apt-get:1": {},
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {}
  },
  "settings": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.resolveGlobalModules": true
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "JuanBlanco.solidity",
        "tintinweb.solidity-visual-auditor",
        "GitHub.copilot-labs",
        "GitHub.copilot-nightly",
        "eamodio.gitlens",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "postCreateCommand": "npm install --global hardhat-shorthand && yarn install",
  "runArgs": [
    "--mount=type=bind,src=${{ env:USERPROFILE }}/.oh-my-zsh,dst=/root/.oh-my-zsh",
    "--mount=type=bind,src=./.devcontainer/.zshrc,dst=/root/.zshrc",
    "-e",
    "ZSH=/root/.oh-my-zsh",
    "-e",
    "ZSH_THEME=jonathan",
    "--entrypoint",
    "zsh"
  ]
}
